[Unit]
Description=Alertmanager
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/{{ alertmanager_file }}/alertmanager \
  --config.file=/usr/local/bin/{{ alertmanager_file }}/alertmanager.yml \
  --cluster.advertise-address="{{ alertmanager_hosts }}:9093"

[Install]
WantedBy=multi-user.target
